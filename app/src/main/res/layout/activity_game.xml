<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp">

    <ImageView
        android:id="@+id/img_slot_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_slot_center"
        app:layout_constraintEnd_toStartOf="@+id/img_slot_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_slot_center"
        app:srcCompat="@drawable/question" />

    <TextView
        android:id="@+id/str_myBets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="45dp"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/str_returnCoins"
        tools:text="掛け金" />

    <ImageView
        android:id="@+id/img_slot_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_slot_center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_slot_center"
        app:layout_constraintTop_toTopOf="@+id/img_slot_center"
        app:srcCompat="@drawable/question" />

    <ImageView
        android:id="@+id/img_slot_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_stop_center"
        app:layout_constraintEnd_toStartOf="@+id/img_slot_right"
        app:layout_constraintStart_toEndOf="@+id/img_slot_left"
        app:layout_constraintTop_toBottomOf="@+id/str_free"
        app:srcCompat="@drawable/question" />

    <Button
        android:id="@+id/btn_stop_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="23dp"
        android:text="STOP!"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/img_slot_left"
        app:layout_constraintTop_toBottomOf="@+id/img_slot_left" />

    <Button
        android:id="@+id/btn_stop_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="527dp"
        android:text="STOP!"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/img_slot_center"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stop_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="23dp"
        android:text="STOP!"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/img_slot_right"
        app:layout_constraintTop_toBottomOf="@+id/img_slot_right" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="55dp"
        android:text="COINS:"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textVie64" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginBottom="79dp"
        android:text="BET(s):"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_game_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:text="RETURN"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/btn_allStop"
        app:layout_constraintStart_toStartOf="@+id/btn_stop_right"
        app:layout_constraintTop_toBottomOf="@+id/str_returnCoins" />

    <TextView
        android:id="@+id/str_myCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/str_myBets"
        app:layout_constraintEnd_toEndOf="@+id/str_myBets"
        tools:text="手持ち" />

    <TextView
        android:id="@+id/textVie64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="RETURN:"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/str_returnCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="0"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/str_myCoins"
        app:layout_constraintTop_toTopOf="@+id/textVie64"
        tools:text="勝ち枚数" />

    <Button
        android:id="@+id/btn_allStop"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="216dp"
        android:text="ALL STOP!"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_game_finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_slot_center"
        app:layout_constraintTop_toTopOf="@+id/btn_stop_right"
        tools:text="りとらい" />

    <TextView
        android:id="@+id/str_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Let's Try!"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/str_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="46dp"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="@+id/str_comment"
        app:layout_constraintTop_toBottomOf="@+id/str_comment"
        tools:text="Free" />
</android.support.constraint.ConstraintLayout>